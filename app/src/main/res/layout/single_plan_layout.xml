<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="7dp"
    android:paddingStart="7dp"
    android:paddingEnd="7dp"
    android:paddingBottom="5dp"
    >

    <TextView
        android:id="@+id/storeName"
        android:layout_width="0dp"
        app:layout_constraintHorizontal_weight="3"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:gravity="center"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@id/salesOrderNo"
        app:layout_constraintLeft_creator="1"
        app:layout_constraintTop_creator="1"
        app:layout_constraintRight_creator="1"
        android:text="Store Name"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="@color/black"
        />

    <TextView
        android:id="@+id/salesOrderNo"
        android:layout_width="0dp"
        app:layout_constraintHorizontal_weight="1"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_creator="1"
        app:layout_constraintRight_creator="1"
        app:layout_constraintLeft_creator="1"
        android:text="Sales Order No"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/titleLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/storeName"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_creator="1"
        app:layout_constraintLeft_creator="1"
        app:layout_constraintRight_creator="1"
        android:layout_marginTop="10dp"
        android:background="@android:color/darker_gray"
        >

        <TextView
            android:id="@+id/lineNoTxt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintRight_toLeftOf="@id/itemNameTxt"
            android:text="Line No"
            android:textColor="@android:color/white"
            />

        <TextView
            android:id="@+id/itemNameTxt"
            android:layout_width="0dp"
            app:layout_constraintHorizontal_weight="2"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/lineNoTxt"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toLeftOf="@id/qtyTxt"
            android:text="Item Name"
            android:textColor="@android:color/white"
            />

        <TextView
            android:id="@+id/qtyTxt"
            android:layout_width="0dp"
            app:layout_constraintHorizontal_weight="1"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/itemNameTxt"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toLeftOf="@id/weightTxt"
            android:text="QTY"
            android:textColor="@android:color/white"
            />

        <TextView
            android:id="@+id/weightTxt"
            android:layout_width="0dp"
            app:layout_constraintHorizontal_weight="1"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/qtyTxt"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toLeftOf="@id/toLoadTxt"
            android:text="Weight"
            android:textColor="@android:color/white"
            />

        <TextView
            android:id="@+id/toLoadTxt"
            android:layout_width="0dp"
            app:layout_constraintHorizontal_weight="1"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/weightTxt"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:text="To Load"
            android:textColor="@android:color/white"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/valueLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/titleLayout"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_creator="1"
        app:layout_constraintLeft_creator="1"
        app:layout_constraintRight_creator="1"
        android:layout_marginTop="5dp"
        >

        <TextView
            android:id="@+id/lineNo"
            android:layout_width="0dp"
            app:layout_constraintHorizontal_weight="1"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toLeftOf="@id/itemName"
            android:text="Line No"
            android:textColor="@android:color/black"
            />

        <TextView
            android:id="@+id/itemName"
            android:layout_width="0dp"
            app:layout_constraintHorizontal_weight="2"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/lineNo"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toLeftOf="@id/qty"
            android:text="Item Name"
            android:textColor="@android:color/black"
            />

        <TextView
            android:id="@+id/qty"
            android:layout_width="0dp"
            app:layout_constraintHorizontal_weight="1"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/itemName"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toLeftOf="@id/weight"
            android:text="QTY"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            />

        <TextView
            android:id="@+id/weight"
            android:layout_width="0dp"
            app:layout_constraintHorizontal_weight="1"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/qty"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toLeftOf="@id/toLoad"
            android:text="Weight"
            android:textColor="@android:color/black"
            />

        <TextView
            android:id="@+id/toLoad"
            android:layout_width="0dp"
            app:layout_constraintHorizontal_weight="1"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/weight"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:text="20"
            android:background="@drawable/edit_text_background"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@id/valueLayout"
        android:layout_marginTop="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_creator="1"
        app:layout_constraintLeft_creator="1"
        app:layout_constraintRight_creator="1"
        android:background="@color/purple_700"
        />

</androidx.constraintlayout.widget.ConstraintLayout>